# Day 15: Airflow Production Patterns - Environment Configuration

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_HOME=/opt/airflow
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Core Settings
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres:5432/airflow
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false

# Webserver Settings
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=true
AIRFLOW__WEBSERVER__RBAC=true

# API Settings
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=airflow
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow

# TechCorp Data Sources
TECHCORP_POSTGRES_HOST=postgres
TECHCORP_POSTGRES_PORT=5432
TECHCORP_POSTGRES_DB=techcorp_data
TECHCORP_POSTGRES_USER=techcorp_user
TECHCORP_POSTGRES_PASSWORD=techcorp_password

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# Customer API
CUSTOMER_API_URL=https://api.techcorp.com/customers
CUSTOMER_API_TOKEN=your_api_token_here

# Events API
EVENTS_API_URL=https://events.techcorp.com/api/v1/events
EVENTS_API_KEY=your_events_api_key_here

# =============================================================================
# SFTP CONFIGURATION
# =============================================================================
PARTNER_SFTP_HOST=sftp.partner.com
PARTNER_SFTP_USER=techcorp_user
PARTNER_SFTP_KEY_FILE=/keys/partner_key.pem
PARTNER_SFTP_REMOTE_PATH=/exports/daily/

# =============================================================================
# FILE PATHS
# =============================================================================
DATA_INPUT_PATH=/data/input
DATA_OUTPUT_PATH=/data/output
DATA_ARCHIVE_PATH=/data/archive
PRODUCT_CATALOG_PATH=/data/products

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================
# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#data-alerts

# Email Settings
SMTP_HOST=smtp.techcorp.com
SMTP_PORT=587
SMTP_USER=airflow@techcorp.com
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL_FROM=airflow@techcorp.com
ALERT_EMAIL_TO=data-team@techcorp.com

# PagerDuty
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key_here

# =============================================================================
# RESOURCE MANAGEMENT
# =============================================================================
# Pool Configurations
FAST_PROCESSING_POOL_SIZE=3
STANDARD_POOL_SIZE=10
BATCH_PROCESSING_POOL_SIZE=2
MONITORING_POOL_SIZE=5
EXTERNAL_API_POOL_SIZE=5

# =============================================================================
# DATA QUALITY THRESHOLDS
# =============================================================================
MIN_SUCCESS_RATE=0.95
MAX_NULL_PERCENTAGE=5.0
MAX_DUPLICATE_PERCENTAGE=2.0
DATA_FRESHNESS_HOURS=24

# =============================================================================
# SLA CONFIGURATION
# =============================================================================
HIGH_PRIORITY_SLA_HOURS=2
MEDIUM_PRIORITY_SLA_HOURS=4
LOW_PRIORITY_SLA_HOURS=12

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Testing
ENABLE_TEST_MODE=false
TEST_DATA_SIZE=1000