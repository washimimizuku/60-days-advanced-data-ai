# Day 47: Advanced Prompting System - Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG_MODE=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/prompting_system
REDIS_URL=redis://localhost:6379/0

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Model Configuration
DEFAULT_MODEL=gpt-3.5-turbo
FALLBACK_MODELS=gpt-3.5-turbo,claude-2
MAX_TOKENS_DEFAULT=1000
TEMPERATURE_DEFAULT=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=5000
MAX_PROMPT_LENGTH=10000
MAX_CONTEXT_LENGTH=50000

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600
CONNECTION_POOL_SIZE=20

# Security Settings
ENABLE_SECURITY_SCANNING=true
SECURITY_SCAN_THRESHOLD=0.8
ENABLE_OUTPUT_FILTERING=true
ENABLE_PII_DETECTION=true
BLOCK_SUSPICIOUS_USERS=true

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=json

# Sentry Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
ENABLE_AB_TESTING=true
DEFAULT_AB_SPLIT=0.5

# User Management
DEFAULT_USER_QUOTA=1000
ADMIN_USER_QUOTA=10000
QUOTA_RESET_PERIOD=monthly
ENABLE_USER_REGISTRATION=true

# Cost Management
COST_TRACKING_ENABLED=true
COST_ALERT_THRESHOLD=100.0
COST_OPTIMIZATION_ENABLED=true
PREFERRED_LOW_COST_MODEL=gpt-3.5-turbo

# Deployment Configuration
ENVIRONMENT=production
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
TRUSTED_HOSTS=yourdomain.com,app.yourdomain.com
ENABLE_DOCS=false

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups