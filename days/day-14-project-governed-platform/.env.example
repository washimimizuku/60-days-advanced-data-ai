# DataCorp Governed Data Platform - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datacorp_platform
POSTGRES_USER=platform_user
POSTGRES_PASSWORD=your_secure_password_here

# Airflow Database
AIRFLOW_POSTGRES_HOST=localhost
AIRFLOW_POSTGRES_PORT=5432
AIRFLOW_POSTGRES_DB=airflow
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow_password_here

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_FERNET_KEY=your_fernet_key_here
AIRFLOW_SECRET_KEY=your_secret_key_here
AIRFLOW_WEBSERVER_PORT=8080
AIRFLOW_EXECUTOR=CeleryExecutor

# =============================================================================
# GOVERNANCE CONFIGURATION
# =============================================================================
# Data Classification
PII_HASH_SALT=datacorp_secure_salt_2024
DATA_RETENTION_YEARS=7
GDPR_COMPLIANCE_THRESHOLD=95

# Privacy Settings
ENABLE_PII_DETECTION=true
ENABLE_DATA_MASKING=true
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# DATA CATALOG CONFIGURATION
# =============================================================================
DATAHUB_GMS_HOST=localhost
DATAHUB_GMS_PORT=8090
DATAHUB_GMS_URL=http://localhost:8090

# Apache Atlas (if using)
ATLAS_HOST=localhost
ATLAS_PORT=21000
ATLAS_USERNAME=admin
ATLAS_PASSWORD=admin

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_here

# Access Control
ENABLE_RBAC=true
DEFAULT_USER_ROLE=analyst
ADMIN_EMAIL=admin@datacorp.com

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# GDPR Settings
GDPR_CONTACT_EMAIL=privacy@datacorp.com
GDPR_DPO_NAME=Data Protection Officer
GDPR_COMPANY_NAME=DataCorp Financial Services

# Audit Settings
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
ENABLE_COMPLIANCE_REPORTING=true
COMPLIANCE_REPORT_SCHEDULE=daily

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Testing
ENABLE_TEST_DATA=false
TEST_DATA_SIZE=1000