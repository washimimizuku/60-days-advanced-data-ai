# Day 11: Access Control - RBAC, Row-Level Security
# Environment Configuration Template

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/access_control_db
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# RBAC Configuration
RBAC_CACHE_TTL=900                    # 15 minutes
RBAC_MAX_ROLE_DEPTH=10               # Maximum inheritance depth
RBAC_ENABLE_CACHING=true

# Row-Level Security Configuration
RLS_ENABLE_QUERY_LOGGING=true
RLS_MAX_POLICIES_PER_TABLE=50
RLS_POLICY_CACHE_TTL=300             # 5 minutes

# ABAC Configuration
ABAC_POLICY_EVALUATION_TIMEOUT=5     # seconds
ABAC_ENABLE_POLICY_CACHING=true
ABAC_MAX_ATTRIBUTE_SIZE=1024         # bytes

# Multi-Tenant Configuration
TENANT_ISOLATION_MODE=row_level      # database, schema, or row_level
TENANT_CONTEXT_TIMEOUT=3600          # 1 hour
DEFAULT_TENANT_PLAN=basic

# Audit Configuration
AUDIT_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=365
AUDIT_ENABLE_REAL_TIME_ALERTS=true
AUDIT_BATCH_SIZE=1000

# Security Monitoring
SECURITY_FAILED_LOGIN_THRESHOLD=5
SECURITY_SUSPICIOUS_ACTIVITY_WINDOW=3600  # 1 hour
SECURITY_ALERT_EMAIL=security@company.com

# Performance Configuration
ACCESS_CONTROL_CACHE_SIZE=10000
PERMISSION_CACHE_TTL=600             # 10 minutes
QUERY_TIMEOUT=30                     # seconds

# Development/Testing
DEBUG_MODE=false
ENABLE_TEST_DATA=false
LOG_LEVEL=INFO

# Optional: External Identity Providers
# LDAP_SERVER=ldap://localhost:389
# LDAP_BIND_DN=cn=admin,dc=company,dc=com
# LDAP_BIND_PASSWORD=admin_password
# OAUTH_CLIENT_ID=your-oauth-client-id
# OAUTH_CLIENT_SECRET=your-oauth-client-secret