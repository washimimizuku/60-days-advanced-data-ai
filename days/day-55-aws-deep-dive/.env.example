# Day 55: AWS Deep Dive - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012
AWS_PROFILE=default

# S3 Buckets (must be globally unique)
ML_TRAINING_BUCKET=ml-training-bucket-your-account-id
DATA_PROCESSING_BUCKET=data-processing-bucket-your-account-id
LOGS_BUCKET=aws-logs-bucket-your-account-id
DOCUMENT_BUCKET=document-uploads-your-account-id

# IAM Roles (replace with your actual ARNs)
SAGEMAKER_ROLE_ARN=arn:aws:iam::123456789012:role/SageMakerExecutionRole
ECS_TASK_ROLE_ARN=arn:aws:iam::123456789012:role/ECSTaskExecutionRole
ECS_EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/ECSTaskExecutionRole
LAMBDA_ROLE_ARN=arn:aws:iam::123456789012:role/LambdaExecutionRole
STEPFUNCTIONS_ROLE_ARN=arn:aws:iam::123456789012:role/StepFunctionsRole

# VPC Configuration (create these resources first)
VPC_ID=vpc-12345678
SUBNET_1=subnet-12345678
SUBNET_2=subnet-87654321
SECURITY_GROUP_ID=sg-12345678
PRIVATE_SUBNET_1=subnet-private1
PRIVATE_SUBNET_2=subnet-private2

# ECS Configuration
CLUSTER_NAME=production-cluster
SERVICE_NAME=rag-api
TASK_FAMILY=rag-api-task
CONTAINER_NAME=rag-api-container
CONTAINER_PORT=8000

# Lambda Configuration
FUNCTION_NAME_PREFIX=bootcamp
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=512
LAMBDA_RUNTIME=python3.9

# SageMaker Configuration
SAGEMAKER_INSTANCE_TYPE=ml.m5.large
SAGEMAKER_ENDPOINT_NAME=text-classifier-endpoint
TRAINING_JOB_PREFIX=bootcamp-training
MODEL_NAME_PREFIX=bootcamp-model

# Application Load Balancer
ALB_NAME=rag-api-alb
TARGET_GROUP_NAME=rag-api-tg
LISTENER_PORT=80
HEALTH_CHECK_PATH=/health

# Auto Scaling Configuration
MIN_CAPACITY=1
MAX_CAPACITY=10
TARGET_CPU_UTILIZATION=70
SCALE_OUT_COOLDOWN=300
SCALE_IN_COOLDOWN=300

# Monitoring Configuration
CLOUDWATCH_LOG_GROUP_PREFIX=/aws/bootcamp
LOG_RETENTION_DAYS=30
ALARM_EMAIL=your-email@example.com
SNS_TOPIC_NAME=bootcamp-alerts

# Cost Management
BUDGET_AMOUNT=100
BUDGET_ALERT_THRESHOLD_1=50
BUDGET_ALERT_THRESHOLD_2=80
BUDGET_ALERT_THRESHOLD_3=100

# Security Configuration
KMS_KEY_ALIAS=alias/bootcamp-key
SECRETS_MANAGER_PREFIX=bootcamp/
ENABLE_ENCRYPTION=true
ENABLE_VPC_ENDPOINTS=true

# Container Registry
ECR_REPOSITORY_NAME=rag-system
CONTAINER_IMAGE_TAG=latest
ECR_REGISTRY_URL=123456789012.dkr.ecr.us-west-2.amazonaws.com

# Database Configuration (if using RDS)
DB_INSTANCE_IDENTIFIER=bootcamp-db
DB_INSTANCE_CLASS=db.t3.micro
DB_ENGINE=postgres
DB_NAME=bootcamp
DB_USERNAME=admin
DB_PASSWORD_SECRET_NAME=bootcamp/db-password

# Redis Configuration (if using ElastiCache)
REDIS_CLUSTER_ID=bootcamp-redis
REDIS_NODE_TYPE=cache.t3.micro
REDIS_PORT=6379

# Step Functions Configuration
STATE_MACHINE_NAME=ml-training-pipeline
EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/StepFunctionsRole

# X-Ray Configuration
ENABLE_XRAY_TRACING=true
XRAY_SAMPLING_RATE=0.1

# API Gateway Configuration (if using)
API_GATEWAY_NAME=rag-api-gateway
API_STAGE_NAME=prod
API_THROTTLE_RATE=1000
API_THROTTLE_BURST=2000

# CloudFormation Stack Names
VPC_STACK_NAME=bootcamp-vpc-stack
ECS_STACK_NAME=bootcamp-ecs-stack
LAMBDA_STACK_NAME=bootcamp-lambda-stack
MONITORING_STACK_NAME=bootcamp-monitoring-stack

# Development Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
ENABLE_METRICS=true

# External API Keys (use AWS Secrets Manager in production)
OPENAI_API_KEY_SECRET_NAME=bootcamp/openai-api-key
HUGGINGFACE_API_KEY_SECRET_NAME=bootcamp/huggingface-api-key

# Backup Configuration
BACKUP_RETENTION_DAYS=7
ENABLE_POINT_IN_TIME_RECOVERY=true
BACKUP_WINDOW=03:00-04:00
MAINTENANCE_WINDOW=sun:04:00-sun:05:00

# Disaster Recovery Configuration
ENABLE_CROSS_REGION_BACKUP=false
DR_REGION=us-east-1
RTO_MINUTES=60
RPO_MINUTES=15

# Compliance and Governance
ENABLE_CONFIG_RULES=true
ENABLE_CLOUDTRAIL=true
CLOUDTRAIL_BUCKET=cloudtrail-logs-your-account-id
ENABLE_GUARDDUTY=false

# Performance Configuration
ENABLE_ENHANCED_MONITORING=true
PERFORMANCE_INSIGHTS_RETENTION=7
ENABLE_SLOW_QUERY_LOG=true

# Networking Configuration
ENABLE_NAT_GATEWAY=true
ENABLE_VPC_FLOW_LOGS=true
DNS_HOSTNAMES=true
DNS_RESOLUTION=true

# Tags (applied to all resources)
PROJECT_NAME=60-days-bootcamp
OWNER=your-name
COST_CENTER=training
ENVIRONMENT_TYPE=development