# Day 46: Prompt Security - Environment Configuration

# Security Configuration
SECURITY_LOG_LEVEL=INFO
ENABLE_SECURITY_MONITORING=true
SECURITY_LOG_FILE=security_events.log
SECURITY_MODE=production

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500
RATE_LIMIT_PER_DAY=2000
MAX_PROMPT_LENGTH=5000
MAX_OUTPUT_LENGTH=2000

# Security Thresholds
MAX_VIOLATIONS_PER_HOUR=5
BLOCK_DURATION_MINUTES=60
SUSPICIOUS_PATTERN_THRESHOLD=3
ANOMALY_DETECTION_SENSITIVITY=0.7

# Redis Configuration (for distributed systems)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TIMEOUT=5

# Database Configuration
DATABASE_URL=sqlite:///security.db
# PostgreSQL: postgresql://user:password@localhost:5432/security_db
# MySQL: mysql://user:password@localhost:3306/security_db

# Encryption and Security Keys
ENCRYPTION_KEY=your_32_byte_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
API_KEY_HASH_SALT=your_salt_here

# Model Configuration
DEFAULT_SYSTEM_PROMPT="You are a helpful assistant."
ENABLE_OUTPUT_FILTERING=true
FILTER_SENSITIVITY=medium
MAX_CONTEXT_LENGTH=4000

# Monitoring and Alerting
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=8001
SENTRY_DSN=your_sentry_dsn_here
ALERT_WEBHOOK_URL=your_webhook_url_here

# Logging Configuration
LOG_FORMAT=json
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30
ENABLE_AUDIT_LOGGING=true

# Attack Detection Configuration
ENABLE_ML_ANOMALY_DETECTION=false
INJECTION_DETECTION_THRESHOLD=0.8
JAILBREAK_DETECTION_THRESHOLD=0.7
LEAK_DETECTION_THRESHOLD=0.9

# Performance Configuration
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
ENABLE_REQUEST_CACHING=true

# Development Settings
DEBUG_MODE=false
ENABLE_SECURITY_BYPASS=false
LOG_SENSITIVE_DATA=false
MOCK_SECURITY_CHECKS=false

# API Configuration
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_INJECTION_DETECTION=true
ENABLE_OUTPUT_FILTERING=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_USER_REPUTATION=true

# Notification Settings
EMAIL_ALERTS_ENABLED=true
SLACK_WEBHOOK_URL=your_slack_webhook_here
DISCORD_WEBHOOK_URL=your_discord_webhook_here

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=/backups/security