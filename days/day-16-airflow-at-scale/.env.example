# Day 16: Airflow at Scale - Environment Configuration
# Copy this file to .env and customize for your environment

# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_REPLICATION_PASSWORD=your_secure_replication_password

# Web Interface
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=your_secure_admin_password

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password

# Alerting (Optional - configure for production)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key
ALERT_EMAIL=platform-team@yourcompany.com

# Scaling Configuration
MIN_WORKERS=3
MAX_WORKERS=50
SCALE_UP_THRESHOLD=50
SCALE_DOWN_THRESHOLD=10
CPU_THRESHOLD=75.0
MEMORY_THRESHOLD=85.0

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# Security
FERNET_KEY=your_fernet_key_here_generate_with_cryptography_fernet

# Performance Tuning
AIRFLOW_PARALLELISM=256
WORKER_CONCURRENCY=16
MAX_ACTIVE_RUNS_PER_DAG=16
MAX_ACTIVE_TASKS_PER_DAG=32