# Day 38: AutoML - Environment Configuration

# Java Configuration (for H2O.ai)
JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
JAVA_OPTS=-Xmx4g

# AutoML Configuration
AUTOML_TIME_BUDGET=3600
AUTOML_N_TRIALS=100
AUTOML_CV_FOLDS=5
AUTOML_ENABLE_ENSEMBLE=true
AUTOML_MAX_FEATURES=1000

# H2O Configuration
H2O_MAX_RUNTIME_SECS=1800
H2O_MAX_MODELS=20
H2O_NTHREADS=-1
H2O_MAX_MEM_SIZE=4G

# AutoGluon Configuration
AUTOGLUON_TIME_LIMIT=1800
AUTOGLUON_QUALITY=good_quality_faster_inference
AUTOGLUON_OUTPUT_DIR=./autogluon_models

# Optuna Configuration
OPTUNA_SAMPLER=TPE
OPTUNA_PRUNER=MedianPruner
OPTUNA_N_JOBS=1

# Model Storage
MODEL_SAVE_PATH=./models/
REPORT_SAVE_PATH=./reports/
LOG_LEVEL=INFO

# Performance Settings
OMP_NUM_THREADS=4
NUMBA_NUM_THREADS=4
MKL_NUM_THREADS=4

# Dataset Configuration
DATASET_SAMPLE_SIZE=5000
TEST_SIZE=0.2
VALIDATION_SIZE=0.2
RANDOM_SEED=42

# Feature Engineering
FE_MAX_FEATURES=1000
FE_SELECTION_RATIO=0.8
FE_ENABLE_INTERACTIONS=true
FE_POLYNOMIAL_DEGREE=2

# Production Settings
ENABLE_MODEL_COMPRESSION=false
MAX_MODEL_SIZE_MB=100
MAX_PREDICTION_LATENCY_MS=100

# Development Settings
DEBUG_MODE=false
SAVE_INTERMEDIATE_RESULTS=true
ENABLE_PROFILING=false