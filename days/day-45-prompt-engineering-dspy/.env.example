# Day 45: Prompt Engineering with DSPy - Environment Configuration

# Language Model API Keys
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Model Configuration
DEFAULT_MODEL=gpt-3.5-turbo
BACKUP_MODEL=gpt-4
MAX_TOKENS=1000
TEMPERATURE=0.7
TOP_P=1.0

# DSPy Configuration
DSPY_CACHE_DIR=./cache
DSPY_LOG_LEVEL=INFO
ENABLE_TRACING=true

# Optimization Settings
BOOTSTRAP_DEMOS=8
LABELED_DEMOS=16
OPTIMIZATION_TRIALS=50
VALIDATION_SPLIT=0.2

# Production Settings
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_RETRIES=3
RETRY_DELAY=1

# Monitoring and Logging
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=dspy-prompt-engineering
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=60

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Database Configuration (Optional)
DATABASE_URL=sqlite:///dspy_metrics.db
POSTGRES_URL=postgresql://user:password@localhost:5432/dspy_db

# Security Settings
API_KEY_ROTATION_DAYS=30
ENABLE_REQUEST_LOGGING=false
MASK_SENSITIVE_DATA=true

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_TRACES=true
TRACE_DIR=./traces