# Day 9: Data Lineage Tracking - Environment Configuration

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lineage_db
POSTGRES_USER=lineage_user
POSTGRES_PASSWORD=your_secure_password

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# MongoDB (for metadata storage)
MONGODB_URI=mongodb://localhost:27017/lineage_metadata
MONGODB_USER=lineage_user
MONGODB_PASSWORD=your_mongo_password

# DataHub Integration
DATAHUB_GMS_URL=http://localhost:8080
DATAHUB_GMS_TOKEN=your_datahub_token

# Apache Atlas Integration
ATLAS_URL=http://localhost:21000
ATLAS_USERNAME=admin
ATLAS_PASSWORD=your_atlas_password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/lineage.log

# Performance Settings
LINEAGE_CACHE_TTL=3600
MAX_LINEAGE_DEPTH=10
BATCH_SIZE=1000

# Security Settings
ENABLE_AUTHENTICATION=true
JWT_SECRET_KEY=your_jwt_secret_key
API_RATE_LIMIT=100

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# Development Settings
DEBUG=false
TESTING=false