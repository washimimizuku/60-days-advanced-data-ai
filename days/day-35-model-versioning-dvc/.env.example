# Day 35: Model Versioning with DVC - Environment Configuration

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================

# MLflow tracking URI (local SQLite for development)
MLFLOW_TRACKING_URI=sqlite:///mlflow.db

# MLflow artifact root directory
MLFLOW_DEFAULT_ARTIFACT_ROOT=./mlruns

# MLflow server configuration
MLFLOW_SERVER_HOST=0.0.0.0
MLFLOW_SERVER_PORT=5000

# Production MLflow (PostgreSQL)
# MLFLOW_TRACKING_URI=postgresql://mlflow:password@localhost:5432/mlflow

# =============================================================================
# DVC CONFIGURATION
# =============================================================================

# DVC cache directory
DVC_CACHE_DIR=.dvc/cache

# DVC remote storage (S3)
DVC_REMOTE_URL=s3://your-bucket-name/dvc-cache

# AWS credentials for DVC remote
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_DEFAULT_REGION=us-west-2

# Alternative: Local DVC remote for testing
# DVC_REMOTE_URL=file:///tmp/dvc-cache

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL for production MLflow
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mlflow
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=password

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# API security
API_SECRET_KEY=your-secret-key-here
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model serving configuration
MODEL_CACHE_SIZE=5
MODEL_BATCH_SIZE=32
MODEL_TIMEOUT_SECONDS=30

# Model validation thresholds
MIN_MODEL_ACCURACY=0.70
MAX_MODEL_LATENCY_MS=100
MAX_MODEL_SIZE_MB=100

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Performance monitoring
MONITORING_ENABLED=true
DRIFT_DETECTION_THRESHOLD=0.05
PERFORMANCE_DEGRADATION_THRESHOLD=0.05

# Alerting configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@healthtech.com,ml-team@healthtech.com

# Slack alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file configuration
LOG_FILE_PATH=logs/healthtech_ml.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Structured logging
LOG_FORMAT=json

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Deployment strategy
DEPLOYMENT_STRATEGY=blue_green
DEPLOYMENT_VALIDATION_ENABLED=true
DEPLOYMENT_ROLLBACK_ENABLED=true

# Health check configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Authentication
AUTH_ENABLED=false
AUTH_PROVIDER=local  # local, oauth2, ldap

# OAuth2 configuration (if using OAuth2)
OAUTH2_CLIENT_ID=your-client-id
OAUTH2_CLIENT_SECRET=your-client-secret
OAUTH2_AUTHORIZATION_URL=https://your-provider.com/oauth/authorize
OAUTH2_TOKEN_URL=https://your-provider.com/oauth/token

# CORS configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# Data paths
DATA_ROOT_PATH=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
FEATURES_DATA_PATH=./data/features

# Data validation
DATA_VALIDATION_ENABLED=true
DATA_SCHEMA_PATH=./schemas/data_schema.json

# Data privacy
PII_DETECTION_ENABLED=true
DATA_ENCRYPTION_ENABLED=false
DATA_ENCRYPTION_KEY=your-encryption-key

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================

# Pipeline execution
PIPELINE_PARALLEL_EXECUTION=true
PIPELINE_MAX_WORKERS=4
PIPELINE_TIMEOUT_MINUTES=60

# Pipeline caching
PIPELINE_CACHE_ENABLED=true
PIPELINE_CACHE_TTL_HOURS=24

# =============================================================================
# KUBERNETES CONFIGURATION (for K8s deployment)
# =============================================================================

# Kubernetes namespace
K8S_NAMESPACE=healthtech-ml

# Resource limits
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=1000m
K8S_MEMORY_REQUEST=1Gi
K8S_MEMORY_LIMIT=2Gi

# Storage
K8S_STORAGE_CLASS=standard
K8S_MODEL_STORAGE_SIZE=10Gi
K8S_DATA_STORAGE_SIZE=50Gi

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode
DEBUG=false
RELOAD=false

# Testing
TEST_DATABASE_URL=sqlite:///test.db
TEST_DATA_SIZE=1000

# Profiling
PROFILING_ENABLED=false
PROFILING_OUTPUT_PATH=./profiling

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================

# Regulatory compliance
COMPLIANCE_FRAMEWORK=FDA_AI_ML_Guidance
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log

# Data retention
DATA_RETENTION_DAYS=2555  # 7 years for healthcare
MODEL_RETENTION_VERSIONS=10

# Privacy
GDPR_COMPLIANCE_ENABLED=true
HIPAA_COMPLIANCE_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true