# Environment Variables for CDC Pipeline
# Copy this file to .env and customize the values

# Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_postgres_password
DEBEZIUM_USER=debezium
DEBEZIUM_PASSWORD=secure_debezium_password

# Monitoring Credentials
GRAFANA_PASSWORD=secure_grafana_password
KAFKA_MANAGER_SECRET=secure_kafka_manager_secret

# Data Generation Settings
GENERATION_RATE=10
BATCH_SIZE=5

# Kafka Settings
KAFKA_REPLICATION_FACTOR=3
KAFKA_MIN_INSYNC_REPLICAS=2

# JVM Settings (adjust based on available memory)
KAFKA_HEAP_OPTS=-Xmx1G -Xms1G
CONNECT_HEAP_OPTS=-Xmx512M -Xms512M