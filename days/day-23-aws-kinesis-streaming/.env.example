# AWS Configuration
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566

# Kinesis Configuration
KINESIS_STREAM_NAME=realtimedata-transactions
FIREHOSE_STREAM_NAME=realtimedata-firehose
S3_BUCKET_NAME=realtimedata-streaming-bucket

# Lambda Configuration
LAMBDA_FUNCTION_NAME=realtimedata-fraud-detector
FRAUD_THRESHOLD=0.8

# Simulation Configuration
SIMULATION_DURATION_MINUTES=5
TRANSACTIONS_PER_MINUTE=1000
FRAUD_RATE=0.02

# Monitoring
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:fraud-alerts
CLOUDWATCH_LOG_GROUP=/aws/lambda/fraud-detection