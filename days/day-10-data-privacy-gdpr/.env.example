# Day 10: Data Privacy - GDPR, PII Handling - Environment Configuration

# Encryption and Security Keys
PRIVACY_SECRET_KEY=your_32_byte_secret_key_here_change_this
PSEUDONYM_SALT=your_unique_salt_for_pseudonymization
FERNET_KEY=your_fernet_encryption_key_here

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=privacy_db
POSTGRES_USER=privacy_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# MongoDB Configuration (for metadata)
MONGODB_URI=mongodb://localhost:27017/privacy_metadata
MONGODB_USER=privacy_user
MONGODB_PASSWORD=your_mongo_password

# Privacy Configuration
DIFFERENTIAL_PRIVACY_EPSILON=1.0
K_ANONYMITY_K=5
L_DIVERSITY_L=2
PRIVACY_CACHE_TTL=3600

# GDPR Configuration
GDPR_RESPONSE_DAYS=30
DPO_EMAIL=dpo@company.com
PRIVACY_EMAIL=privacy@company.com
DATA_CONTROLLER=Your Company Name

# PII Detection Configuration
PII_CONFIDENCE_THRESHOLD=0.7
ENABLE_ML_PII_DETECTION=true
SPACY_MODEL=en_core_web_sm

# Compliance Settings
ENABLE_AUDIT_LOGGING=true
RETENTION_POLICY_DAYS=2555
BACKUP_RETENTION_DAYS=90

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30
ENABLE_API_AUTHENTICATION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/privacy.log
ENABLE_STRUCTURED_LOGGING=true

# Monitoring Configuration
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=60
ENABLE_METRICS=true

# Development Settings
DEBUG=false
TESTING=false
MOCK_EXTERNAL_SERVICES=false

# Data Catalog Integration
DATAHUB_GMS_URL=http://localhost:8080
DATAHUB_GMS_TOKEN=your_datahub_token
ATLAS_URL=http://localhost:21000
ATLAS_USERNAME=admin
ATLAS_PASSWORD=your_atlas_password

# Cloud Provider Settings (if applicable)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AZURE_TENANT_ID=your_azure_tenant_id
GCP_PROJECT_ID=your_gcp_project_id

# Notification Settings
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=notifications@company.com
SMTP_PASSWORD=your_smtp_password
ENABLE_EMAIL_NOTIFICATIONS=true

# Security Settings
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_ENCRYPTION_IN_TRANSIT=true
REQUIRE_MFA=true
SESSION_TIMEOUT=3600