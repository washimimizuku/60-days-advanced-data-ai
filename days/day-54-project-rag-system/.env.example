# Day 54: Production RAG System - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# LLM and Embedding Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-3.5-turbo

# Alternative LLM Providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Local Model Configuration
USE_LOCAL_MODELS=false
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LOCAL_LLM_MODEL_PATH=./models/llama-2-7b-chat

# =============================================================================
# System Configuration
# =============================================================================

# Paths and Storage
VECTOR_DB_PATH=./data/vectordb
DOCUMENTS_PATH=./data/documents
LOGS_PATH=./logs
TEMP_PATH=./tmp

# Processing Parameters
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RETRIEVAL_DOCS=20
RERANK_TOP_K=5

# Performance Settings
RESPONSE_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100
WORKER_PROCESSES=4

# =============================================================================
# Quality and Evaluation Thresholds
# =============================================================================

# RAGAS Thresholds
FAITHFULNESS_THRESHOLD=0.7
RELEVANCY_THRESHOLD=0.8
PRECISION_THRESHOLD=0.6
RECALL_THRESHOLD=0.7

# Alert Configuration
ENABLE_QUALITY_ALERTS=true
ALERT_COOLDOWN_MINUTES=15
MAX_ALERTS_PER_HOUR=10

# =============================================================================
# Database Configuration
# =============================================================================

# Vector Database
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma, pinecone
CHROMA_HOST=localhost
CHROMA_PORT=8001
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# Cache Database
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600
ENABLE_CACHING=true

# Metadata Database
DATABASE_URL=sqlite:///./data/rag_system.db
# DATABASE_URL=postgresql://user:password@localhost:5432/rag_system

# =============================================================================
# API Configuration
# =============================================================================

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30

# CORS Settings
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Authentication (Optional)
ENABLE_API_AUTHENTICATION=false
API_KEY=your_secure_api_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Prometheus Metrics
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
METRICS_PATH=/metrics

# Grafana Configuration
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3000

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Document Processing
# =============================================================================

# File Processing
SUPPORTED_FORMATS=pdf,txt,md,docx,html
MAX_FILE_SIZE_MB=50
BATCH_PROCESSING_SIZE=10

# Content Processing
ENABLE_OCR=false
OCR_LANGUAGE=eng
EXTRACT_METADATA=true
ENABLE_CONTENT_VALIDATION=true

# Indexing Configuration
AUTO_REINDEX_INTERVAL_HOURS=24
INCREMENTAL_INDEXING=true
INDEX_BACKUP_ENABLED=true

# =============================================================================
# Security Configuration
# =============================================================================

# Data Security
ENCRYPT_STORED_DATA=false
ENCRYPTION_KEY=your_encryption_key_here
HASH_SENSITIVE_FIELDS=true

# Access Control
ENABLE_RBAC=false
ADMIN_USERS=admin@company.com
READONLY_USERS=readonly@company.com

# Network Security
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Data Privacy
ANONYMIZE_QUERIES=false
DATA_RETENTION_DAYS=90
GDPR_COMPLIANCE=true

# =============================================================================
# Integration Configuration
# =============================================================================

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/YOUR-WEBHOOK

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook Configuration
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=10

# =============================================================================
# Development and Testing
# =============================================================================

# Development Mode
DEBUG_MODE=false
DEVELOPMENT_MODE=false
ENABLE_HOT_RELOAD=false

# Testing Configuration
TEST_DATA_PATH=./test_data
ENABLE_TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false

# Profiling and Debugging
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=./profiles
ENABLE_MEMORY_PROFILING=false

# =============================================================================
# Deployment Configuration
# =============================================================================

# Container Configuration
CONTAINER_MEMORY_LIMIT=4g
CONTAINER_CPU_LIMIT=2
CONTAINER_RESTART_POLICY=unless-stopped

# Load Balancing
ENABLE_LOAD_BALANCER=false
LOAD_BALANCER_ALGORITHM=round_robin
UPSTREAM_SERVERS=localhost:8000,localhost:8001

# Auto Scaling
ENABLE_AUTO_SCALING=false
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# =============================================================================
# Backup and Recovery
# =============================================================================

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Recovery Settings
ENABLE_AUTO_RECOVERY=false
RECOVERY_TIMEOUT_MINUTES=10
MAX_RECOVERY_ATTEMPTS=3

# Data Export
EXPORT_FORMAT=json
ENABLE_SCHEDULED_EXPORTS=false
EXPORT_SCHEDULE_CRON=0 2 * * 0

# =============================================================================
# Feature Flags
# =============================================================================

# Advanced Features
ENABLE_QUERY_EXPANSION=true
ENABLE_RERANKING=true
ENABLE_MULTI_HOP_REASONING=false
ENABLE_CONVERSATION_MEMORY=false

# Experimental Features
ENABLE_MULTIMODAL_RAG=false
ENABLE_AGENT_CAPABILITIES=false
ENABLE_REAL_TIME_LEARNING=false

# Performance Optimizations
ENABLE_ASYNC_PROCESSING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_RESULT_CACHING=true
ENABLE_QUERY_OPTIMIZATION=true