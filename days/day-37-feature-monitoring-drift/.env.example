# Day 37: Feature Monitoring & Drift - Environment Configuration

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_INPUT_TOPIC=feature-data
KAFKA_ALERT_TOPIC=drift-alerts
KAFKA_AUTO_OFFSET_RESET=latest

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=feature-monitoring-drift
MLFLOW_MODEL_NAME=ecommerce_recommendation_model

# Database Configuration (Optional)
DATABASE_URL=sqlite:///feature_monitoring.db
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
DRIFT_CHECK_INTERVAL=300
ALERT_COOLDOWN=1800
MAX_ALERTS_PER_HOUR=10
WINDOW_SIZE=1000

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/feature_monitoring.log

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=1000
MEMORY_LIMIT=4GB

# Security Configuration
API_KEY=your-api-key-here
SECRET_KEY=your-secret-key-here

# Development Configuration
ENVIRONMENT=development
DEBUG_MODE=false
TEST_DATA_SIZE=10000